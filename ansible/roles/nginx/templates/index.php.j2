<?php
$host = "127.0.0.1";
$db   = "{{ db_name }}";
$user = "{{ db_user }}";
$pass = "{{ db_password }}";

try {
  $pdo = new PDO("mysql:host=$host;dbname=$db;charset=utf8mb4", $user, $pass, [
    PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION
  ]);
  echo "✅ PHP works. ✅ DB connection OK.";
} catch (Exception $e) {
  echo "✅ PHP works. ❌ DB connection failed.";
}
